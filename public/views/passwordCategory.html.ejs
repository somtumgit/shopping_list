<!DOCTYPE html>
<html lang="en">
<head>
    
    
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/css/fontawesome/css/all.css">
        <link rel="stylesheet" href="/css/bootstrap/bootstrap.css">
        <link rel="stylesheet" href="/css/employee.css">
        <title><%=title%></title>

    
</head>
<body>

<%- include('header.html.ejs') %>

<div class="container">

    <h1><%=pageTitle%></h1>
    <% if(msg.success != '') {%>
    <div class="alert alert-success" role="alert">
        <b>Success: </b> <%=msg.success%>
    </div>
    <%} else if(msg.error != '') {%>
    <div class="alert alert-danger" role="alert">
        <%=msg.error%>
    </div>
    <% } %>
    <table class="table">
        <thead>
            <tr>
                <th>Password Category Lists</th>
                <th>Action</th>
            </tr>
        </thead>
        <% if(records.length > 0) {%>
            <% for (var i=0; i < records.length; i++) {%>
        <tr>
            <td><%=records[i].passwordCategory%></td>
            <td>
                <a href="/passwordCategory/edit/<%=records[i]._id%>" class="btn btn-primary btn-xs"><i class="far fa-edit"></i></a>
                <a href="/passwordCategory/delete/<%=records[i]._id%>" class="btn btn-danger btn-xs" onclick="return confirm('Are you sure?')"><i class="far fa-trash-alt"></i></a>
            </td>
        </tr>
            <% } %>
        <%} else {%>
        <tr>
            <td colspan="7" style="text-align:center;">Records Not Found</td>
        </tr>
        <% } %>
    </table>
</div>

<%- include('footer.html.ejs') %>

<script src="/js/bootstrap/jquery-1.9.1.min.js"></script>
<script src="/js/bootstrap/bootstrap.js"></script>

</body>
</html>